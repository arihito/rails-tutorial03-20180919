<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <h2 class="navbar-brand"><%= link_to "sample app", root_path, id: "logo" %></h2>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to root_path do %><i class='glyphicon glyphicon-home'></i>Home<% end %></li>
        <li><%= link_to help_path do %><i class='glyphicon glyphicon-question-sign'></i>Help<% end %></li>
        <% if logged_in? %>
          
          <li><%= link_to "#" do %><i class='glyphicon glyphicon-user'></i>Users<% end %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class='glyphicon glyphicon-tag'></i>Account <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to current_user do %><i class='glyphicon glyphicon-user'></i>Profile<% end %></li>
              <li><%= link_to "#" do %><i class='glyphicon glyphicon-cog'></i>Settings<% end %></li>
              <li class="divider"></li>
              <li><%= link_to logout_path, { method: :delete } do %><i class='glyphicon glyphicon-log-out'></i>Logout<% end %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to login_path do %><i class='glyphicon glyphicon-log-in'></i>Login<% end %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>